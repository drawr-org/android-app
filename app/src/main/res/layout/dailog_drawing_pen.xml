<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="250dp"
              android:layout_height="250dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/dialog_title_stroke"
                      android:textSize="16dp"/>
            <SeekBar android:layout_width="match_parent" android:layout_height="wrap_content"
                     android:id="@+id/stroke_bar"
                     android:max="99"/> <!-- In dialog it will be +1 to have values from 1 to 100 -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/dialog_title_color"
                      android:textSize="16dp"/>
            <com.github.danielnilsson9.colorpickerview.view.ColorPickerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/colorpicker"/>
</LinearLayout>